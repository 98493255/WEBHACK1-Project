<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="../stylesheets/login.css">
</head>
<body>
    <form action="/login" method="post">
        <div id="main">
            <div class="modal">
                <label class="title">FoodForward <br> <span id="head"> login</span></label>
                <div id="cred">
                    <input type="text" name="username" id="inp" class="org" placeholder="Username" required>
                    <input type="password" name="password" id="inp" placeholder="Password" required>
                </div>
                <div class="modal--footer">
                    <button class="upgrade-btn">LOGIN</button>
                </div>
            </div>
        </div>
    </form>

    <script src="../javascripts/login.js"></script>
</body>
</html>
